{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",
    "lib": ["dom", "ES6"],

    /* Modules */
    "module": "commonjs",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    
    "declaration": true,

    /* Emit */
    "outDir": "./src",                      /* Specify an output folder for all emitted files. */
    "types": ["babylonjs", "babylonjs-gui"]
  },
  "files": [ "./src/index.ts" ]
}
